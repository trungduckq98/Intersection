<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/stroke6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/aaa_title"
        android:gravity="center"
        android:background="#E14D7F"
        android:text="Tìm kiếm bạn bè"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
       />
    <LinearLayout
        android:id="@+id/aaa_ln"
        android:weightSum="10"
        android:layout_below="@+id/aaa_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:gravity="center"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/edt_emailsearch"
            android:layout_weight="8"
            android:drawablePadding="8dp"
            android:hint="Nhập email"
            android:textSize="12sp"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:background="@drawable/search_input_style"
            android:layout_width="0dp"
            android:layout_height="40dp"
            />
        <Button
            android:id="@+id/btn_emailsearch"
            android:textSize="12sp"
            android:text="Tìm"
            android:background="@drawable/stroke5"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="40dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_emailsearch"
        android:layout_below="@+id/aaa_ln"
        android:visibility="gone"
        android:text="Không tìm thấy kết quả phù hợp!!!"
        android:gravity="center"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <LinearLayout
        android:background="@drawable/cardview_user"
        android:id="@+id/ln_emailsearch"
        android:visibility="gone"
        android:padding="4dp"
       android:layout_below="@+id/aaa_ln"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="16dp"
        android:layout_height="?attr/actionBarSize">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_thump2"
            android:padding="4dp"
            app:civ_border_width="1dp"
            android:layout_width="48dp"
            android:layout_height="48dp"/>


        <LinearLayout
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_diplayname2"
                android:textColor="#000000"
                android:gravity="center|start"

                android:textSize="18sp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>


    </LinearLayout>




</RelativeLayout>