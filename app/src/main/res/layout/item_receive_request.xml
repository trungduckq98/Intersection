<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <LinearLayout
        android:gravity="center"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="4dp"
            android:id="@+id/img_thump6"
            android:layout_width="84dp"
            android:layout_height="84dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="5"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="#000000"
                android:gravity="center|start"
                android:layout_weight="3"
                android:id="@+id/txt_diplayname6"
                android:textSize="18sp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:textStyle="italic"
                android:text="Đã gửi lời mời kết bạn cho bạn"
                android:gravity="center|start"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginEnd="32dp"
            android:layout_marginTop="4dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/btn_chapnhan6"
                android:gravity="center"
                android:text="Chấp nhận"
                android:textColor="#000000"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/stroke3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/btn_tuchoi6"
                android:gravity="center"
                android:text="Từ chối"
                android:textColor="#000000"
                android:layout_marginStart="2dp"

                android:background="@drawable/stroke1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>