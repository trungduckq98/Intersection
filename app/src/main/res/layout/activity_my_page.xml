<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".view.MyPageActivity">

    <androidx.appcompat.widget.Toolbar
        app:title="Trang của bạn"
        android:id="@+id/toolbar_my_page"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/back_ground">
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="16dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_thump12"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:padding="4dp"
                        android:src="@drawable/image_user_defalse" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_choose12"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/icon_camera"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="4dp"
                        app:civ_border_width="1dp" />
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="8dp"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:id="@+id/txt_diplayname12"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_format_align_left_black_24dp" />
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="Option"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_create_post12"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="6dp"
                        android:src="@drawable/ic_note_add_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:gravity="center"
                        android:text="Đăng bài"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_viewimage12"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="6dp"
                        android:src="@drawable/ic_album_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:gravity="center"
                        android:text="Xem ảnh"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <TextView
                android:id="@+id/txt_control_info"
                android:text="Xem thông tin cá nhân"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:gravity="center|start"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="#E1D9DC"
                android:drawableEnd="@drawable/ic_down_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ln_viewInfo"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:id="@+id/txt_fullname12"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_person_black_16dp"
                    android:padding="4dp"

                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_address12"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_home_black_16dp"
                    android:padding="4dp"

                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_datebirth12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_sort_black_16dp"
                    android:drawablePadding="4dp"
                    android:gravity="center|start"
                    android:padding="4dp"

                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_sex12"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_wc_black_16dp"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_email12"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_email_black_16dp"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_description12"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_description_black_16dp"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/stroke7"
                    android:id="@+id/txt_edit_mypage12"
                    android:textColor="#20A3BA"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_mode_edit_blue_24dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="12dp"
                    android:text="Chỉnh sửa thông tin cá nhân"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:background="#E1D9DC"
                android:layout_width="match_parent"
                android:layout_height="6dp"
               />
            <TextView
                android:drawablePadding="4dp"
                android:gravity="start|center"
                android:drawableStart="@drawable/ic_list_black_24dp"
                android:padding="8dp"
                android:textColor="@color/colorBlack"
                android:text="Bài đăng gần đây"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="#E1D9DC"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>