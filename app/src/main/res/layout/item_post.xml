<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="4dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="4dp"
            android:layout_gravity="center|start"
            android:id="@+id/img_thump13"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <LinearLayout
            android:weightSum="5"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#000000"
                android:gravity="center|start"
                android:layout_weight="3"
                android:id="@+id/txt_diplayname13"
                android:textSize="18sp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <TextView
                    android:layout_alignParentStart="true"
                    android:textStyle="italic"
                    android:id="@+id/txt_type13"
                    android:gravity="center|start"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </TextView>
                <TextView
                    android:textColor="@color/colorBlack"
                    android:layout_marginEnd="16dp"
                    android:layout_alignParentEnd="true"
                    android:textStyle="italic"
                    android:id="@+id/txt_time13"
                    android:gravity="center|start"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </TextView>
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/post_text13"
        android:padding="4dp"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:scaleType="matrix"
        android:id="@+id/post_image13"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/stroke2"
            android:layout_marginEnd="2dp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1">
            <ImageView
                android:src="@drawable/ic_heart_white"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <TextView
                android:id="@+id/txt_count_like13"
                android:padding="4dp"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:drawablePadding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

        </LinearLayout>

        <ImageView
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:id="@+id/img_like13"
            android:padding="4dp"
            android:src="@drawable/ic_heart_white"
            android:background="@drawable/stroke2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"/>
        <TextView
            android:layout_marginStart="2dp"
            android:id="@+id/txt_comment13"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:text="Comment"

                android:layout_weight="3"
                android:background="@drawable/stroke2"
                android:layout_width="0dp"
                android:layout_height="30dp" />

    </LinearLayout>

</LinearLayout>