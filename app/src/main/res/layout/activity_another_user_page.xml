<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.AnotherUserPageActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_another_user_page"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/back_ground">
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_thump3"
                    android:layout_gravity="center"
                    android:layout_width="140dp"
                    android:layout_height="140dp"

                    app:civ_border_width="1dp" />
                <TextView
                    android:layout_marginTop="8dp"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:gravity="center"

                    android:id="@+id/txt_diplayname3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ln_current_request"
                android:gravity="center"
                android:background="@drawable/stroke1"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_height="40dp">
                <TextView
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/ic_send_black_24dp"
                    android:text="Bạn đã gửi lời mời kết bạn"
                    android:textAllCaps="false"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ln_another_request"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_height="70dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:gravity="center"
                        android:drawablePadding="6dp"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/ic_person_add_black_24dp"
                        android:text="Trả lời kết bạn"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:id="@+id/btn_chapnhanketban"
                        android:gravity="center"
                        android:text="Chấp nhận"
                        android:textColor="#000000"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="32dp"
                        android:background="@drawable/stroke3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/btn_tuchoiketban"
                        android:gravity="center"
                        android:text="Từ chối"
                        android:textColor="#000000"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="32dp"
                        android:background="@drawable/stroke1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ln_no_friend"
                android:gravity="center"
                android:background="@drawable/stroke1"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_height="40dp">
                <TextView
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/ic_person_add_black_24dp"
                    android:text="Thêm bạn bè"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ln_friend"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/btn_friends"
                        android:padding="4dp"
                        android:src="@drawable/ic_group_bblue_24dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:gravity="center"
                        android:text="Bạn bè"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout

                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:id="@+id/btn_nhantin"
                            android:padding="6dp"
                            android:src="@drawable/iconsmessage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                        <ImageView
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/iconsonline"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="12dp"
                            android:layout_height="12dp"/>
                    </RelativeLayout>

                    <TextView
                        android:gravity="center"
                        android:text="Nhắn tin"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ln_viewimage3"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="6dp"
                        android:src="@drawable/ic_album_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:gravity="center"
                        android:text="Xem ảnh"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:textSize="12sp"/>
                </LinearLayout>


            </LinearLayout>

            <View
                android:visibility="gone"
                android:id="@+id/kengang_another_page"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:id="@+id/txt_fullname3"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_person_black_16dp"
                    android:padding="4dp"

                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_address3"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_home_black_16dp"
                    android:padding="4dp"

                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_datebirth3"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_sort_black_16dp"
                    android:padding="4dp"

                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_sex3"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_wc_black_16dp"
                    android:padding="4dp"

                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_email3"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_email_black_16dp"
                    android:padding="4dp"

                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_description3"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_description_black_16dp"
                    android:padding="4dp"

                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ln_isfriend3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="#E1D9DC"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    />
                <TextView
                    android:drawablePadding="4dp"
                    android:gravity="start|center"
                    android:drawableStart="@drawable/ic_list_black_24dp"
                    android:padding="8dp"
                    android:textColor="@color/colorBlack"
                    android:text="Bài đăng gần đây"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="#E1D9DC"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>